<openerp>
<data>
<record id="mrp_production_view_form" model="ir.ui.view">
    <field name="name">mrp.production form - byproduct cost</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook" position="inside">
                <page name="page_byproduct" string="Byproduct">
                    <group name="grp_byproduct_calculation" string="Byproduct Calculation" colspan="4" col="2">
                        <field name="byproduct_cost_alocation_method" invisible="1"/>
                        <field name="byproduct_cost_ids" colspan="2" nolabel="1" 
                            context="{'default_byproduct_cost_alocation_method': byproduct_cost_alocation_method}"
                            >
                            <tree string="Byproduct Calculation">
                                <field name="product_id"/>
                                <field name="join_cost_method"/>
                                <field name="join_cost"/>
                                <field name="multiplier"/>
                                <field name="byproduct_cost"/>
                                <field name="qty_produced"/>
                                <field name="byproduct_subtotal"/>
                            </tree>
                            <form>
                                <group name="grp_byproduct" colspan="4" col="2">
                                    <field name="production_id" invisible="0"/>
                                    <field name="product_id"/>
                                    <field name="join_cost_method"/>
                                    <field name="byproduct_cost_alocation_method" invisible="1"/>
                                    <field name="join_cost_ids" colspan="2" nolabel="1" 
                                        domain="[('mrp_production_id','=',production_id)]"
                                        attrs="{'invisible':[('join_cost_method','!=','manual_selection')]}">
                                        <tree>
                                            <field name="date"/>
                                            <field name="ref"/>
                                            <field name="name"/>
                                            <field name="user_id"/>
                                            <field name="product_id"/>
                                            <field name="journal_id"/>
                                            <field name="amount"/>
                                            <field name="unit_amount"/>
                                            <field name="product_uom_id"/>
                                            <field name="account_id"/>
                                            <field name="mrp_production_id"/>
                                            <field name="workorder"/>
                                            <field name="company_id"/>
                                        </tree>
                                    </field>
                                    <field name="compute_unit_price_from"
                                        attrs="{'invisible':[('join_cost_method','!=','manual_selection')]}"/>
                                    <field name="manual_join_cost"
                                        attrs="{'invisible':[('join_cost_method','!=','manual')]}"/>
                                    <field name="join_cost" 
                                        attrs="{'invisible':[('join_cost_method','=','manual')]}"/>
                                    <field name="multiplier" 
                                        attrs="{'invisible':[('byproduct_cost_alocation_method','!=','weighted')]}"/>
                                    <field name="byproduct_cost"/>
                                    <field name="qty_produced"/>
                                    <field name="produced_stock_move_ids" colspan="2" nolabel="1" groups="base.group_system"/>
                                </group>
                            </form>
                        </field>
                        <field name="bp_real_cost"/>
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="mrp_production_view_formi_1" model="ir.ui.view">
    <field name="name">mrp.production form - byproduct cost</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp_production_real_cost.mrp_production_form_view_real_costs"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='real_cost']" position="attributes">
                <attribute name="attrs"></attribute>
            </xpath>
            <xpath expr="//field[@name='unit_real_cost']" position="attributes">
                <attribute name="attrs"></attribute>
            </xpath>
        </data>
    </field>
</record>
</data>
</openerp>
